{
  "workflow_description": {
    "name":"differential_expression",
    "version": 1.0,
    "label":"Differential expression",
    "type":"differential_expression",
    "inputs":[
      "qc_reports/{sample}/*/{sample}.*.*"
    ],
    "outputs":[
      "results/*",
      "logs/*"
    ],
    "report_index": "results/{comparison}/{biotype}/edgeR.tsv",
    "reports":[
       "results/*"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name",
    "condition",
    "replicate"
  ],
  "requested_params": [
    "is_paired",
    "reference",
    "ref_from_trans_assembly",
    "feature_count",
    "RSEM",
    "salmon",
    "salmon_map",
    "salmon_align",
    "kallisto"
  ],
  "gui_params" : {
    "primary": {
      "conditions_to_compare": {
        "label": "Conditions to compare",
        "type": "string",
        "default": "all"
      }
    },
    "detailed": {
      "biotypes": {
        "label": "Biotypes",
        "type": "string",
        "default": "all"
      },
      "pvalue_for_viz": {
        "label": "pvalue for viz",
        "type": "string",
        "default": "0.05"
      },
      "named_in_viz": {
        "label": "Named in viz",
        "type": "int",
        "default": 20
      },
      "fold_change_threshold": {
        "label": "Fold change threshold",
        "type": "int",
        "default": 2
      },
      "use_tag_to_pair_samples": {
        "label": "Use tag to pair samples",
        "type": "bool",
        "default": false
      },
      "info": {
        "label": "Info",
        "type": "string",
        "default": "",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "use_tag_to_pair_samples": false
            }
          }
        }
      },
      "donor": {
        "label": "Donor",
        "type": "string",
        "default": "UNK",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "use_tag_to_pair_samples": false
            }
          }
        }
      },
      "ref_from_trans_assembly": {
        "label": "Reference from trans. assembly",
        "type": "bool",
        "default": false
      }
    },
    "samples": {
      "condition": {
        "label": "Condition",
        "type": "string",
        "default": ""
      },
      "replicate": {
        "label": "Replicate ID",
        "type": "string",
        "default": ""
      }
    }
  }
}
