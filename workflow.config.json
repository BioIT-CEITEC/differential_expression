{
  "workflow_description": {
    "name":"differential_expression",
    "version": 1.0,
    "label":"Differential expression VB2",
    "type":"differential_expression",
    "inputs":[
      "qc_reports/{sample}/*/{sample}.*.*"
    ],
    "outputs":[
      "logs",
      "final_report.html"
    ],
    "outputs_optional":[
      "DE_RSEM",
      "DE_feature_count"
    ],
    "report_index": "final_report.html",
    "reports":[
       "final_report.html"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "reference",
    "feature_count",
    "RSEM"
  ],
  "gui_params" : {
    "primary": {
      "conditions_to_compare": {
        "label": "Conditions to compare",
        "type": "string",
        "default": "all"
      },
      "paired_replicates": {
        "label": "Replicates are paired by ID.",
        "type": "bool",
        "default": false
      },
      "use_custom_batch_effect_grouping": {
        "label": "Use custom batch effect groups in batch.",
        "type": "bool",
        "default": false,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "paired_replicates": true
            }
          }
        }
      }
    },
    "detailed": {
      "keep_not_compared_samples_for_normalization": {
        "label": "Keep not compared samples for normalization.",
        "type": "bool",
        "default": true,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "normalize_data_per_comparison": false
            }
          }
        }
      },
      "normalize_data_per_comparison": {
        "label": "Normalize read counts to all samples OR per comparison.",
        "type": "bool",
        "default": false
      },
      "remove_genes_with_mean_read_count_threshold": {
        "label": "Remove genes with mean raw read count bellow.",
        "type": "int",
        "default": 0
      },
      "biotypes": {
        "label": "Biotypes",
        "type": "string",
        "default": "all"
      },
      "pvalue_for_viz": {
        "label": "pvalue for viz",
        "type": "string",
        "default": "0.05"
      },
      "fold_change_threshold": {
        "label": "Fold change threshold",
        "type": "int",
        "default": 2
      },
      "named_in_viz": {
        "label": "Named in viz",
        "type": "int",
        "default": 20
      }
    },
    "samples": {
      "condition": {
        "label": "Condition",
        "type": "string",
        "default": ""
      },
      "replicate": {
        "label": "Replicate ID",
        "type": "string",
        "default": ""
      },
      "batch_group": {
        "label": "Batch",
        "type": "string",
        "default": "",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "use_custom_batch_effect_grouping": true
            }
          }
        }
      }
    }
  }
}