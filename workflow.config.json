{
  "workflow_description": {
    "name":"differential_expression",
    "version": 1.0,
    "label":"Differential expression",
    "type":"differential_expression",
    "inputs":[
      "qc_reports/{sample}/*/{sample}.*.*"
    ],
    "outputs":[
      "DE_*",
      "logs/*"
    ],
    "report_index": "results/{comparison}/{biotype}/edgeR.tsv",
    "reports":[
       "results/*"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "reference",
    "feature_count",
    "RSEM"
  ],
  "gui_params" : {
    "primary": {
      "conditions_to_compare": {
        "label": "Conditions to compare",
        "type": "string",
        "default": "all"
      },
      "custom_batch_effect_grouping": {
        "label": "Add custom batch effect groups.",
        "type": "bool",
        "default": false
      }
    },
    "detailed": {
      "biotypes": {
        "label": "Biotypes",
        "type": "string",
        "default": "all"
      },
      "pvalue_for_viz": {
        "label": "pvalue for viz",
        "type": "string",
        "default": "0.05"
      },
      "named_in_viz": {
        "label": "Named in viz",
        "type": "int",
        "default": 20
      },
      "fold_change_threshold": {
        "label": "Fold change threshold",
        "type": "int",
        "default": 2
      }
    },
    "samples": {
      "condition": {
        "label": "Condition",
        "type": "string",
        "default": ""
      },
      "replicate": {
        "label": "Replicate ID",
        "type": "string",
        "default": ""
      },
      "batch_group": {
        "label": "Batch",
        "type": "string",
        "default": "",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "custom_batch_effect_grouping": true
            }
          }
        }
      }
    }
  }
}