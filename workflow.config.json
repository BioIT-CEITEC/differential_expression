{
  "workflow_description": {
    "name":"alignment_qc",
    "version": 1.0,
    "label":"Alignment QC",
    "type":"alignment_qc",
    "inputs":[
      "qc_reports/{sample}/raw_fastqc/*",
      "qc_reports/{sample}/rsem_count/{sample}.genes.results",
      "feature_counts/{sample}.featureCounts.tsv"
    ],
    "outputs":[
      "results/*"
    ],
    "report_index": "results/{comparison}/{biotype}/edgeR.tsv",
    "reports":[
       "results/*"
    ]
  },
  "general_params": [
    "library_name",
    "sample_name",
    "condition",
    "tag",
    "lib_forward_read_length",
    "lib_reverse_read_length"
  ],
  "gui_params" : {
    "detailed": {
      "count_over": {
        "label": "Count over",
        "type": "enum",
        "default": "exon",
        "list": {
          "exon": "Exon",
          "gene": "Gene",
          "transcript": "Transcript",
          "mRNA": "mRNA",
          "three_prime_utr": "Three prime UTR",
          "five_prime_utr": "Five prime UTR"
        }
      },
      "biotypes": {
        "label": "Biotypes",
        "type": "string",
        "default": "all"
      },
      "conditions_to_compare": {
        "label": "Conditions to compare",
        "type": "string",
        "default": "all"
      },
      "use_tag_to_pair_samples": {
        "label": "Use tag to pair samples",
        "type": "enum",
        "default": "false",
        "list": {
          "true": "True",
          "false": "False"
        }
      }
    },
    "samples": {
      "condition": {
        "label": "Condition",
        "type": "string",
        "default": ""
      },
      "tag": {
        "label": "Tag",
        "type": "string",
        "default": ""
      }
    }
  }
}

